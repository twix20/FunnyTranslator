<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://templates.pingendo.com/assets/Pingendo_favicon.ico">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">

    <title>@ViewBag.Title - Funny Translator</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/toastr")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="body">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md fixed-top bg-dark navbar-dark">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar2SupportedContent" aria-controls="navbar2SupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbar2SupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="#body">Home</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="#translator">Translate</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <div>
        <!-- Footer -->
        <footer id="contact" class="text-md-left text-center p-4 bg-dark text-light">
            <div class="container">
                <div class="row text-center">
                    <div class="my-3 col-lg-8 col-md-12">
                        <h3>.NET Developer</h3>
                        <p class="text-muted">Piotr Markiewicz</p>
                        <p class="my-3">
                            <i class="fa fa-envelope"></i>
                            mr.piotr.markiewicz{at}gmail.com
                        </p>
                    </div>

                    <div class="my-3 col-lg-4">
                        <h3>Follow</h3>
                        <a href="https://www.github.com/twix20" target="blank">
                            <i class="fa fa-github-square text-muted fa-3x m-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/js/toastr")
    @RenderSection("scripts", required: false)
</body>
</html>
